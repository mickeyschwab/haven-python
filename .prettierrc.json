{
  "printWidth": 100,
  "tabWidth": 4,
  "semi": true,
  "singleQuote": false,
  "trailingComma": "all",
  "bracketSpacing": true,
  "arrowParens": "always",
  "endOfLine": "lf",
  "overrides": [
    {
      "files": ["*.py"],
      "options": {
        "parser": "python"
      }
    },
    {
      "files": ["*.json", "*.yml", "*.yaml", "*.md"],
      "options": {
        "tabWidth": 2
      }
    }
  ]
} 